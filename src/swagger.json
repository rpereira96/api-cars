  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Cria a categoria",
        "description": "Cria uma nova categoria",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "example": { 
                    "name": "nome categoria exemplo",
                    "description": "descrição exemplo"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Criado"
          },
          "500": {
            "description": "Categoria já existe"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "Lista todas as categorias",
        "description": "Lista todas as categorias",
        "responses": {
          "200": {
            "description": "Sucess",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties":{
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/import":{
      "post": {
        "tags": ["Category"],
        "summary": "Importa a categoria",
        "description": "Importa uma nova categoria",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type":"string",
                    "formart": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Criado"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": ["Specifications"],
        "summary": "Cria uma specificação",
        "description": "Cria uma nova specificação",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Specifications"               
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Criado"
          },
          "500": {
            "description":"Specification already exists"
          }
        }
      }
    },
    "definitions": {
      "Specifications": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "example": { 
            "name": "nome specificação exemplo",
            "description": "descrição exemplo"
          }
        }
      }
    }
  }
